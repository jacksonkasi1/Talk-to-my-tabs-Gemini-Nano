{
  "name": "extension",
  "displayName": "TalkToMyTabs",
  "version": "0.0.1",
  "description": "Chrome extension that transforms your new tab into an article feed dashboard with AI chat capabilities",
  "private": true,
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.15.0",
    "axios": "^1.12.2",
    "lucide-react": "^0.542.0",
    "markdown-it": "^14.1.0",
    "plasmo": "^0.90.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/chrome": "^0.1.5",
    "@types/markdown-it": "^14.1.2",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.2"
  },
  "manifest": {
    "permissions": [
      "storage",
      "activeTab",
      "sidePanel",
      "tabs",
      "scripting",
      "contextMenus",
      "notifications",
      "offscreen"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "commands": {
      "open-chat-sidebar": {
        "suggested_key": {
          "default": "Ctrl+Shift+Y"
        },
        "description": "Open AI chat sidebar"
      },
      "open-popup": {
        "suggested_key": {
          "default": "Ctrl+Shift+P"
        },
        "description": "Open article simplifier popup"
      }
    },
    "web_accessible_resources": [
      {
        "resources": ["assets/fonts/*"],
        "matches": ["<all_urls>"]
      }
    ]
  }
}